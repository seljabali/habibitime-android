<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>

    <style name="FullscreenTheme" parent="android:Theme.NoTitleBar">
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowBackground">@null</item>
        <item name="metaButtonBarStyle">@style/ButtonBar</item>
        <item name="metaButtonBarButtonStyle">@style/ButtonBarButton</item>
    </style>

    <style name="ButtonBar">
        <item name="android:paddingLeft">2dp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingRight">2dp</item>
        <item name="android:paddingBottom">0dp</item>
        <item name="android:background">@android:drawable/bottom_bar</item>
    </style>

    <style name="ButtonBarButton" />

    <style name="H1">
        <item name="android:textSize">@dimen/H1</item>
    </style>

    <style name="H2">
        <item name="android:textSize">@dimen/H2</item>
    </style>

    <style name="H3">
        <item name="android:textSize">@dimen/H3</item>
    </style>

    <style name="H4">
        <item name="android:textSize">@dimen/H4</item>
    </style>

    <style name="H5">
        <item name="android:textSize">@dimen/H5</item>
    </style>

    <style name="H6">
        <item name="android:textSize">@dimen/H6</item>
    </style>

    <style name="H7">
        <item name="android:textSize">@dimen/H7</item>
    </style>

    <style name="Title">
        <item name="android:textSize">@dimen/title</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Body">
        <item name="android:textSize">@dimen/body</item>
    </style>

</resources>
