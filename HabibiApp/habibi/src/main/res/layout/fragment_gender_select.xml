<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"  xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/double_space"
    android:gravity="center_horizontal">

    <!--SELF GENDER SELECT-->
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1">
        <TextView
            android:id="@+id/gender_select_self_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/gender_select_self_title"/>

        <LinearLayout
            android:id="@+id/gender_select_self_linear_layout"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/single_space"
            android:paddingRight="@dimen/double_space"
            android:paddingLeft="@dimen/double_space">

            <ImageView
                android:id="@+id/gender_select_self_m_image_view"
                android:layout_width="@dimen/gender_icon_width"
                android:layout_height="@dimen/gender_icon_height"
                android:layout_marginRight="@dimen/quadruple_space"
                android:layout_gravity="start"
                android:src="@drawable/gender_male"/>

            <ImageView
                android:id="@+id/gender_select_self_f_image_view"
                android:layout_width="@dimen/gender_icon_width"
                android:layout_height="@dimen/gender_icon_height"
                android:layout_gravity="end"
                android:src="@drawable/gender_female"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1">
        <!--HABIBI GENDER SELECT-->
        <TextView
            android:id="@+id/gender_select_habibi_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/gender_select_habibi_title"/>

        <LinearLayout
            android:id="@+id/gender_select_habibi_linear_layout"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/single_space"
            android:paddingRight="@dimen/quadruple_space"
            android:paddingLeft="@dimen/quadruple_space">

            <ImageView
                android:id="@+id/gender_select_habibi_m_image_view"
                android:layout_width="@dimen/gender_icon_width"
                android:layout_height="@dimen/gender_icon_height"
                android:layout_marginRight="@dimen/quadruple_space"
                android:layout_gravity="start"
                android:src="@drawable/gender_male"/>

            <ImageView
                android:id="@+id/gender_select_habibi_f_image_view"
                android:layout_width="@dimen/gender_icon_width"
                android:layout_height="@dimen/gender_icon_height"
                android:layout_gravity="end"
                android:src="@drawable/gender_female"/>
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/gender_select_subtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="@string/gender_select_subtitle"/>

</LinearLayout>